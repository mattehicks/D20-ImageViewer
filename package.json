{
  "name": "d20-image-viewer",
  "version": "1.0.0",
  "description": "Simple image viewer with keyboard navigation and folder shortcuts",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": ["image", "viewer", "electron"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.d20imageviewer",
    "productName": "D20 Image Viewer",
    "win": {
      "target": ["portable", "nsis"],
      "icon": "build/icon.ico"
    },
    "portable": {
      "artifactName": "D20-Image-Viewer-Portable.exe"
    },
    "directories": {
      "output": "dist"
    }
  }
}
